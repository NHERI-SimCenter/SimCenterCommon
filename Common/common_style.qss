/*----------------------------------------------------------------------------*/
/* QPushButton                                                                */
/*----------------------------------------------------------------------------*/

QPushButton {
    color: white;
    border-style: outset;
    background-color: #64B5F6;
    border-style: outset;
    border-width: 1px;
    border-radius: 2px;
    border-color: #607D8B;
    font-size: 12px;
    font-weight: bold;
    padding: 3px;
}

QPushButton:pressed {
    background-color: #B0BEC5;
    border-style: inset;
    border-color: black;
}

